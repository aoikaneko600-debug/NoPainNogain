          <button onclick="restartQuiz()" style="padding:8px 16px;border-radius:5px;border:1px solid #FF69B4;background:#fff;">ã‚‚ã†ä¸€åº¦æŒ‘æˆ¦</button>
        `;
      }
    }

    window.selectAnswer = function(index) {
      if (quiz[current].answer === index) score++;
      current++;
      renderQuiz();
    };

    window.restartQuiz = function() {
      current = 0;
      score = 0;
      renderQuiz();
    };

    window.onload = renderQuiz;
